node {
    def mvnHome
    stage('Preparation') { // for display purposes
        checkout scmGit(branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[credentialsId: 'github', url: 'https://github.com/udungg/spring-petclinic.git']])
    }
    stage('compile') {
        echo "compile app"
    }
    stage('SAST') {
        fortifyClean addJVMOptions: '', buildID: 'petclinic', logFile: '', maxHeap: ''
        fortifyTranslate addJVMOptions: '', buildID: 'petclinic', excludeList: '', logFile: '', maxHeap: '', xHeap: '', projectScanType: fortifyMaven3(mavenOptions: 'package -DskipTests -Dmaven.test)
        fortifyRemoteScan buildID: 'petclinic', uploadSSC: [appName: 'petclinic', appVersion: '1.0']
    }
    stage('Build Container Image') {
        echo "sast"
    }
    stage('Push Container Image') {
        echo "sast"
    }
    stage('Deploy to Openshift') {
        echo "sast"
    }
    stage('DAST') {
        echo "sast"
    }
}
